<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameclear_background"
    android:id="@+id/gameclear"
    xmlns:andoroid="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/clear" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/gameclear" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/gameclear" />

    <!--  ↓ステージセレクトへ遷移　-->
    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_gravity="center|bottom"
        android:src="@drawable/next" />

    <!--  ↓離れていくアニメーション　-->

    <!--  ↓右上　-->

    <ImageView
        android:id="@+id/flower_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/flower1" />

    <ImageView
        android:id="@+id/big_flower_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/flower2" />

    <ImageView
        android:id="@+id/flower_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/flower1" />

    <ImageView
        android:id="@+id/big_flower_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="2dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/flower2" />

    <!--  ↓左下　-->
    <ImageView
        android:id="@+id/flower_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/flower1" />

    <ImageView
        android:id="@+id/big_flower_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/flower2" />

    <!--  ↓右下　-->
    <ImageView
        android:id="@+id/flower_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/flower1" />

    <ImageView
        android:id="@+id/big_flower_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="2dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/flower2" />

    <!--  ↑ここまで離れていくアニメーション　-->

</FrameLayout>
